/* Backup folder */
BACKUP ~mod-thalantyr-ex/backup~ // %MOD_FOLDER% will be a literal (because it's not set yet?) so use hard-coded name

/* Author */
AUTHOR ~Bardez; support at: https://github.com/BardezAnAvatar/BGEE-Thalantyr-Ex/issues~

/* WeiDU versions newer than v203 allow tp2 level version listing in the .log for troubleshooting  */
VERSION ~v0.1.1~

//TP2 flags
MODDER // Enable all error messages; nothing suppressed. comment this out for release version
ASK_EVERY_COMPONENT
AUTO_EVAL_STRINGS
AUTO_TRA ~%MOD_FOLDER%/tra/%s~ //match strings to matching *.d/*.tra files -- https://weidu.org/~thebigg/README-WeiDU.html#hevea_default184


/****************
*   languages   *
****************/
LANGUAGE
    ~English~ 
    ~en_US~
        //There is a problem with using %MOD_FOLDER% here: https://forums.pocketplane.net/index.php?topic=29521.0
        ~./mod-thalantyr-ex/tra/en_US/setup.tra~
        ~./mod-thalantyr-ex/tra/en_US/thalan.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/cloaks.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/rings.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/axes.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/plate-mail.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/helmets.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/shields.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/amulets.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/maces.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/swords.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/daggers.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/hammers.tra~
        ~./mod-thalantyr-ex/craftable-items/tra/en_US/crossbows.tra~


/*********************
*   Mod Components   *
*********************/
BEGIN @0 
    //Require Thalantyr Item Upgrade Mod
    REQUIRE_COMPONENT ~THALAN/THALAN.TP2~ "0" @1 //must have base mod installed

//Debugging Statements
PRINT ~DEBUG: var `MOD_FOLDER`: %MOD_FOLDER%~

// Get crafting state for THALAN.DLG
PRINT @2
OUTER_SET ThalantyrCraftingState = STATE_WHICH_SAYS @9001 FROM ~THALAN~
PRINT @3 //found state

//copy over items
INCLUDE ~%MOD_FOLDER%/lib/macros.tph~
INCLUDE ~%MOD_FOLDER%/comp/recipes.tph~
INCLUDE ~%MOD_FOLDER%/craftable-items/items/plate-mail/install.tph~
INCLUDE ~%MOD_FOLDER%/craftable-items/items/helmets/install.tph~
INCLUDE ~%MOD_FOLDER%/craftable-items/items/shields/install.tph~
INCLUDE ~%MOD_FOLDER%/comp/shandalar-cloak/shandalar-cloak.tph~  // Shandalar's Cloak
INCLUDE ~%MOD_FOLDER%/comp/varscona3/varscona3.tph~  // Varscona +3
INCLUDE ~%MOD_FOLDER%/comp/koveras/koveras.tph~  // Koveras' Ring of Protection versions
INCLUDE ~%MOD_FOLDER%/comp/protection/protection.tph~  // Protection amulet, etc.
INCLUDE ~%MOD_FOLDER%/comp/axes/axes.tph~  // axes
INCLUDE ~%MOD_FOLDER%/comp/remainder/remainder.tph~  // remainder

//Update Thalantyr's dialog
COMPILE EVALUATE_BUFFER ~%MOD_FOLDER%/dlg/THALAN.d~

//Sub-components for Koveras' Ring of Protection
BEGIN @14
    SUBCOMPONENT @13
    INCLUDE ~%MOD_FOLDER%/comp/koveras/cursed/koveras_ring_cursed.tph~  // cursed ring desc.

BEGIN @15
    SUBCOMPONENT @13
    INCLUDE ~%MOD_FOLDER%/comp/koveras/no_curse/koveras_ring_no_curse.tph~  // non-cursed ring desc.
