

//Kiel's Buckler +1
COPY ~%MOD_FOLDER%/comp/armor/BZSH20AI.BAM~ ~override/BZSH20AI.BAM~  // Kiel's Buckler +1 Inventory BAM

COPY_EXISTING ~SHLD20.ITM~ ~override/BZSH20A.ITM~ //Kiel's Buckler -> +1
    //Patches
        SAY NAME2 @70000
        SAY IDENTIFIED_DESC @70001
        WRITE_ASCII_TERMINATE 0x3A "BZSH20AI"   // Icon
        WRITE_LONG 0x34 4500                    // Price
        WRITE_LONG 0x42 90                      // Lore to Identify
        LPF ~ALTER_ITEM_EFFECT~
            INT_VAR
                header = 1
                check_globals = 1
                match_opcode = 0                // AC bonus
                parameter1 = 2                  // AC bonus of 2
        END
        LPF ~ALTER_ITEM_EFFECT~
            INT_VAR
                header = 2
                check_globals = 1
                match_opcode = 0                // AC bonus
                parameter1 = "-2"               // AC bonus of -2
        END
        LPF ~ALTER_ITEM_EFFECT~
            INT_VAR
                header = 3
                check_globals = 1
                match_opcode = 0                // AC bonus
                parameter1 = "-2"               // AC bonus of -2
        END

